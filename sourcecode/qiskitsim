from qiskit import QuantumCircuit, Aer, transpile
import numpy as np

def simulate_quantum_ibmq(simulator: str, quantum_circuit: QuantumCircuit, num_shots: int):
    backend = Aer.get_backend(simulator)
    transpiled_quantum_circuit = transpile(quantum_circuit, backend)
    job_simulation = backend.run(transpiled_quantum_circuit, num_shots)
    simulation_result = job_simulation.result()
    counts = simulation_result.get_counts(quantum_circuit)

    return counts




